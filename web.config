<?xml version="1.0"?>
<configuration>
   <system.webServer>
    <rewrite>
      <rules>
        <clear />
        <rule name="RewriteRequestsToPublic" stopProcessing="true">
          <match url="^(.*)$" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
          </conditions>
          <action type="Rewrite" url="public/index.php/{R:0}" />
        </rule>

        <rule name="Rule images" stopProcessing="true">
          <match url="^css/*.css$" ignoreCase="false"/>
          <action type="Rewrite" url="/css/main.css" appendQueryString="true"/>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
