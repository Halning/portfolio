{
  "name": "porfolio",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4300",
    "start:aot": "ng serve --aot --port 4301",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "build:prod:aot": "ng build --prod --aot",
    "biuld:p:a::firebase:d": "ng build --prod --aot && npm run precache && npm run firebase:deploy",
    "firebase:deploy": "firebase deploy",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n:en": "ng xi18n --progress --verbose --locale en-US --output-path src/locale",
    "i18n:serve:ru": "ng serve --aot --i18n-file=src/locale/messages.ru.xlf --locale=ru --i18n-format=xlf",
    "build-i18n": "for lang in en ru; do ng build --output-path=dist/$lang --aot -prod --bh /$lang/ --i18n-file=src/locale/messages.$lang.xlf --i18n-format=xlf --locale=$lang; done",
    "precache": "sw-precache --verbose --config=sw-precache-config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~4.0.0",
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/compiler-cli": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/material": "^2.0.0-beta.2",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "bootstrap": "^4.0.0-alpha.2",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "ng2-bootstrap": "^1.6.1",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.0.0",
    "@types/hammerjs": "^2.0.34",
    "@types/jasmine": "2.5.38",
    "@types/node": "^7.0.10",
    "angular-in-memory-web-api": "^0.3.1",
    "codelyzer": "~3.0.0-beta.4",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.0.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~4.0.13",
    "sw-precache": "^5.1.0",
    "ts-node": "~3.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0"
  }
}
